<CameraSettings>

    <Sensor name="ov2740" sensorType="raw" description="ov2740 with full feature support.">
        <MediaCtlConfig id="0" ConfigMode="NORMAL" outputWidth="1920" outputHeight="1088" format="V4L2_PIX_FMT_YUYV420_V32"> <!-- VEC_YUV BE capture -->
            <control name="ov2740 binner a" ctrlId="V4L2_CID_LINK_FREQ" value="0" ctrlName="set FREQ"/>
            <control name="ov2740 binner a" ctrlId="V4L2_CID_WDR_MODE" value="0" ctrlName="set WDR"/>

            <link srcName="ov2740 pixel array a" srcPad="0" sinkName="ov2740 binner a" sinkPad="0" enable="true"/>
            <link srcName="ov2740 binner a" srcPad="1" sinkName="Intel IPU4 CSI-2 0" sinkPad="0" enable="true"/>
            <link srcName="Intel IPU4 CSI-2 0" srcPad="1" sinkName="Intel IPU4 CSI2 BE" sinkPad="0" enable="true"/>
            <link srcName="Intel IPU4 CSI2 BE" srcPad="1" sinkName="Intel IPU4 ISA" sinkPad="0" enable="true"/>
            <link srcName="Intel IPU4 ISA" srcPad="1" sinkName="Intel IPU4 ISA capture" sinkPad="0" enable="true"/>
            <link srcName="Intel IPU4 ISA config" srcPad="0" sinkName="Intel IPU4 ISA" sinkPad="2" enable="true"/>
            <link srcName="Intel IPU4 ISA" srcPad="3" sinkName="Intel IPU4 ISA 3A stats" sinkPad="0" enable="true"/>
            <link srcName="Intel IPU4 ISA" srcPad="4" sinkName="Intel IPU4 ISA scaled capture" sinkPad="0" enable="true"/>
            <format name="ov2740 pixel array a" pad="0" type="RESOLUTION_MAX" width="1932" height="1092" format="V4L2_MBUS_FMT_SGRBG10_1X10"/>
            <format name="ov2740 binner a" pad="0" width="1932" height="1092" format="V4L2_MBUS_FMT_SGRBG10_1X10"/>
            <format name="ov2740 binner a" pad="1" width="1932" height="1092" format="V4L2_MBUS_FMT_SGRBG10_1X10"/>
