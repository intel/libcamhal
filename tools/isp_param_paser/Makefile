CXXFLAGS= -std=c++11

srcobjs=$(patsubst %.cpp, %.o, $(shell ls *.cpp))

mainobj=main.o

bin=isp_param_parser

all: $(bin)

%.o: %.cpp
	$(CXX) $(CXXFLAGS) -o $@ -c $<

$(bin): $(mainobj) $(srcobjs)
	$(CXX) -o $@ $^ $(LDFLAGS)

clean:
	rm -f $(mainobj) $(srcobjs) $(bin)
